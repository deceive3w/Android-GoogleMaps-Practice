<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchStreetActivity">

    <EditText
        android:id="@+id/et_search_query_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan nama jalan"></EditText>

    <LinearLayout
        android:id="@+id/search_street_pick_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cardview_light_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="Tentukan titik di peta" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_search_of_query"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>